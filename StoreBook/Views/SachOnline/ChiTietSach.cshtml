@{
    ViewBag.Title = "ChiTietSach";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="thumbnail">
    <h4 class="tensach">
        @Model.TenSach
    </h4>
    <img src="~/Images/@Model.Anhbia" alt="@Model.TenSach" />
    <div class="motasach">
        <p>
            @Html.Raw(@Model.Mota.ToString().Replace("\n", "</p><p>hihihihihihihihi"));
        </p>
    </div>

    <p class="ngaycapnhap">
        Ngày cập nhập: @Html.FormatValue(@Model.Ngaycapnhap, "{0:dd/MM/yyyy}")
    </p>
    <p class="giaban">Giá bán: <span>@Html.FormatValue(@Model.Giaban, "{0:#,##0}") VNĐ</span></p>
    <p class="addtocard">
        <a href="@Url.Action("ThemGioHang","GioHang", new { ms = Model.MaSach, url = Request.Url.ToString() })" class="btn btn-primary" role="button">
            <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true">

            </span>Add to card

        </a>
    </p>
</div>

